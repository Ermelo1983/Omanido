<%= form_for @profile do |f| %>
    <% @profile.errors.full_messages.each do |msg| %>
        <p class="alert alert-danger"><%= msg %></p>
    <% end %>

    <div class="form-group">
      <label>First Name</label>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Street name</label>
      <%= f.text_field :street, placeholder: "Streetname", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Street number</label>
      <%= f.number_field :streetnumber, placeholder: "Street number", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>ZIP Code</label>
      <%= f.text_field :zipcode, placeholder: "ZIP Code (e.g. 1111AA)", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>City</label>
      <%= f.text_field :city, placeholder: "City", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Birthdate</label>
      <%= f.text_field :birth_date, placeholder: "Birthdate (e.g. 09-09-1990)", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Want to recieve newsletter?</label>
      <%= f.check_box :newsletter %>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", root_path, class: "btn btn-default" %>
    </div>
<% end %>
