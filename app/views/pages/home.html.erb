<script>
var c=0;
var t;
var poping=0;

function displayFireworks() {
	createFirework(25,187,7,1,null,null,null,null,false,true);
	t=setTimeout(function(){displayFireworks()},2000);
}

function doTimer() {
if (!poping) {
  poping=1;
  displayFireworks();
  }
}

function stopCount() {
clearTimeout(t);
