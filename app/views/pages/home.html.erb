
<h1>Featured items</h1>
<% @products.each do |product| %>
    <% if product.is_featured? %>
    <div class="featured">
      <div class="product-box-image no-float"><img class= "product-thumb"  src="<%=product.image%>" /></div>
      <%= link_to product.name, product_path(product.id)%><br />
      â‚¬ <%= product.price %><br />
      <%= link_to "Show detailed information", product_path( product.id ), :class => "btn btn-primary btn-sm" %>
            </div>
    <% end %>
<% end %>

